}




  /* 菜谱 */
  .food-box{
    display: flex;
    flex-direction: row;
    padding: 20rpx 20rpx;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .food-cover{
    width: 345rpx;
    height: 400rpx;
    border-radius: 20rpx;
  }
  .food-title{
    font-size: 36rpx;
    margin: 10rpx 10rpx;
  
    /* 处理文字超出范围，限制文字显示 */
    width: 330rpx;
    height: 100rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;  
  }
  



  