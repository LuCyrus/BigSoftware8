/* 搜索框 */
.search-wrap {
    padding: 0 20rpx 20rpx 20rpx;
    background-color: #FF6146;
  }
  
  .search-box {
    padding: 0 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border: 1rpx solid #e6e6e6;
    background-color: #FFF;
  }
  
  .input-cell {
    padding: 20rpx 20rpx;
    background-color: white;
    width: 600rpx;
  }
  
  .search-img {
    height: 50rpx;
    width: 50rpx;
    background-color: white;
  }
  /* 分类 */
  .type-box{
     display:flex;
     flex-direction: row;
     text-align: center;
     justify-content: center;
     margin-top: 20rpx;
  }
  .type-text{
     padding: 20rpx 10rpx;
     background-color: rgb(245, 245, 245);
     width: 200rpx;
    }
  .type-video{
    width: 200rpx;
    padding: 20rpx 20rpx;
    background-color: rgb(245, 245, 245);
 }
