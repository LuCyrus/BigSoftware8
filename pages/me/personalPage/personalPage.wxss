.message {
    display: flex;
    flex-direction: row;
    padding: 20rpx 20rpx 40rpx 20rpx;
  }
  
  /* 左半部分 */
  .left {
    margin-right: 15rpx;
  }
  
  /* 右半部分 */
  .right {
    width: 580rpx;
  }
  
  .face-img {
    width: 100rpx;
    height: 100rpx;
  }
  
  .nickname {
    color: #586B94;
    font-weight: 550;
    font-size: 34rpx;
    margin-bottom: 15rpx;
  }
  
  /* 发布时间、删除 */
  .time-delete {
    display: flex;
    flex-direction: row;
    font-size: 28rpx;
    margin: 10rpx 0rpx 10rpx 0rpx;
  }
  
  .time {
    color: #7f7f7f;
    margin-right: 20rpx;
  }
  
  .delete {
    color: #586B94;
  }
  
  /* 互动 模块 */
  .hudong-img {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
  }
  
  .hudong-box {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    color: #7f7f7f;
    margin: 10rpx 0rpx 10rpx 0;
  }
  
  .hudong-cell {
    display: flex;
    flex-direction: row;
    align-items: center;
  
  }
  
  /* 动态图片 */
  .images-wrap {
    margin-top: 10rpx;
  }
  
  .image-1 {
    width: 500rpx;
    height: 500rpx;
  }
  
  .image-2-3 {
    width: 180rpx;
    height: 180rpx;
    margin-right: 6rpx;
  }
  
  .image-4 {
    width: 240rpx;
    height: 240rpx;
    margin-right: 6rpx;
  }
  
  .image-5-9 {
    width: 180rpx;
    height: 180rpx;
    margin-right: 6rpx;
  }
  
  /* 点赞列表 */
  .prize-box {
    background-color: #f7f7f7;
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    padding: 20rpx 20rpx;
    color: #586B94;
    font-size: 30rpx;
    border-bottom: 1rpx solid #EDEDED;
  }
  
  .prize-img {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
  }
  
  /* 评论列表 */
  .comment-box {
    background-color: #f7f7f7;
    padding: 20rpx 20rpx;
    font-size: 30rpx;
  }
  
  .comment {
    margin-bottom: 20rpx;
  }
  
  .comment-nickname {
    color: blue;
  }
  
  /* 照相机 */
  .camera-box {
    position: fixed;
    text-align: right;
    margin: 5rpx 20rpx 0rpx 0rpx;
    right: 0;
  
  }
  
  .camera-img {
    width: 65rpx;
    height: 65rpx;
  
  
  }
  
  .share-button {
    background-color: #fff;
    margin: 0 0;
  }
  
  .share-text {
    font-weight: 500;
    font-size: 28rpx;
  }
  .nicknameAndFollow{
    display: flex;
    flex-direction: row;
  }
  .follow{
    color: white;
    font-weight: 550;
    font-size: 32rpx;
    margin-left: 50rpx;
    width: 200rpx;
    padding: 5rpx 7rpx;
    background-color: rgb(255, 103, 154);
    text-align: center;
    border-radius: 5rpx;
    border:1rpx solid;
  }
  .follow-yes{
    color: white;
    font-weight: 550;
    font-size: 32rpx;
    margin-left: 50rpx;
    width: 200rpx;
    padding: 5rpx 7rpx;
    background-color:grey;
    text-align: center;
    border-radius: 5rpx;
    border:1rpx solid;
  }