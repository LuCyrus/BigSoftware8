/* 搜索 */
.search-wrap{
  padding: 0 20rpx 20rpx 20rpx;
  background-color: #d49c33;
}
.search-box{
  display: flex;
  flex-direction: row;
  border: 1rpx solid #e6e6e6;
  /* margin: 0 20rpx; */
  padding: 0 20rpx;
  /* border-radius: 20rpx; */
  justify-content: space-between;
  align-items: center;
  background-color: #FFF;
}
.search-img{
width: 50rpx;
height: 50rpx;
background-color: white;

}
.input-cell{
 padding: 20rpx 20rpx;
  width: 600rpx;
  background-color: white;
}
/* 商品列表 */
.good-box{
   display: flex;
   flex-direction: row;
   padding: 20rpx 20rpx;
   border: 4rpx solid gainsboro;
}
.good-img{
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
}
.right-bottom-box{
 display: flex;
 flex-direction: row;
 width: 500rpx;
 justify-content: space-between;
}
.right-box{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0;
}
.price{
  color: #FBC966;
  font-size: 36rpx;
}
.tag{
  color: #dddddd;
}
.search-text{
  text-align: center;
  padding: 20rpx 20rpx;
  background-color: #FBC966;
  color: white;
  width: 300rpx;
  font-size: 42rpx;

}
.search-text-box{
  display:flex;
     flex-direction: row;
     text-align: center;
     justify-content: center;
     margin-top: 20rpx;
}